{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "API para gestionar contactos",
    "version": "1.0.0"
  },
  "host": "cse-341-1izn.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/contacts": {
      "get": {
        "summary": "All Contacts",
        "tags": ["Contacts"],
        "responses": {
          "200": {
            "description": "Get All Contacts"
          }
        }
      },
      "post": {
        "summary": "Create a new Contact",
        "tags": ["Contacts"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Contact Info",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "email": { "type": "string" },
                "favouriteColor": { "type": "string" },
                "birthday": { "type": "string" }
              },
              "example": {
                "firstName": "Alberto",
                "lastName": "Martinez",
                "email": "chrismartinez@mongo.das",
                "favouriteColor": "Green",
                "birthday": "8-16-1978"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Contact Created Successfully"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "summary": "Get Contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "6903a2dde7c5534cac476aa5"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact Info"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "put": {
        "summary": "Update Contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Contact data to update",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "email": { "type": "string" },
                "favouriteColor": { "type": "string" },
                "birthday": { "type": "string" }
              },
              "example": {
                "firstName": "Andre",
                "lastName": "Rodriguez",
                "email": "chrisitian@mongo.das",
                "favouriteColor": "Blue",
                "birthday": "12-5-2002"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contact Updated Successfully"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "delete": {
        "summary": "Delete Contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "690fbe321a0156fd9ba8ad12"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact Deleted Successfully"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      }
    }
  }
}
